package philips.healthcare.radar.rules.mrpostprocessrules;

import philips.healthcare.radar.rules.mrpostprocessrules.ConnectivityDataModel;

rule "Connectivity Rule Severity High"
no-loop true
	when 
		$connectivityModel : ConnectivityDataModel(numberDaysWithoutConnection >10)
	then
		$connectivityModel.setSeverity("High");
		update($connectivityModel)
end

rule "Connectivity Rule Severity Medium"
no-loop true
	when
		$connectivityModel : ConnectivityDataModel(numberDaysWithoutConnection >= 4 &&
							numberDaysWithoutConnection <= 10 )
	then
		$connectivityModel.setSeverity("Medium");
		update($connectivityModel)
end

rule "Connectivity Rule Severity None"
no-loop true
	when
		$connectivityModel : ConnectivityDataModel(numberDaysWithoutConnection < 3)
	then
		$connectivityModel.setSeverity("None");
		update($connectivityModel)
end

